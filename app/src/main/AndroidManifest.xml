<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YogaApp"
        >
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.course.CourseHomeActivity" />
        <activity android:name=".activities.course.AddCourseActivity" />
        <activity android:name=".activities.course.CourseDetailActivity" />
        <activity android:name=".activities.classes.ClassHomeActivity" />
        <activity android:name=".activities.classes.AddClassActivity" />
        <activity android:name=".activities.classes.ClassDetailActivity" />
    </application>

</manifest>